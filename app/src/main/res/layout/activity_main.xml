<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blurTarget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Static background image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sunny_morning_background" />

    <!-- ðŸ”¹ Scrollable content over background -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blurRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Current location title -->
            <TextView
                android:id="@+id/currentLocationTitle"
                android:layout_width="152dp"
                android:layout_height="33dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="43dp"
                android:text="current location"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Current location symbol -->
            <ImageView
                android:id="@+id/currentLocationTitleSymbol"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="119dp"
                android:layout_marginTop="47dp"
                android:scaleType="centerCrop"
                android:src="@drawable/current_location_title_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Temperature -->
            <TextView
                android:id="@+id/gradus"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="138dp"
                android:layout_marginTop="132dp"
                android:text="18Â°"
                android:textColor="#FFFFFF"
                android:textSize="90sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Weather Status -->
            <TextView
                android:id="@+id/weatherStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="158dp"
                android:layout_marginTop="240dp"
                android:text="Weather Status"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Weather Status Symbol -->
            <ImageView
                android:id="@+id/weatherStatusTitleSymbol"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="248dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sunny_weather_status_title_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Weather Info Container -->
            <FrameLayout
                android:id="@+id/weatherInfoContainer"
                android:layout_width="376dp"
                android:layout_height="111dp"
                android:layout_marginTop="480dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/weatherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Air Quality -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Quality Index:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:id="@+id/weatherAirQualityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="31dp"
                    android:layout_gravity="end" />

                <!-- Humidity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:id="@+id/weatherHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23%"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="62dp"
                    android:layout_marginEnd="52dp"
                    android:layout_gravity="end" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/humidity_water_drop_symbol"
                    android:layout_marginTop="64dp"
                    android:layout_marginStart="330dp" />

            </FrameLayout>
            <!-- Weather Today Container -->
            <FrameLayout
                android:id="@+id/weatherTodayContainer"
                android:layout_width="376dp"
                android:layout_height="192dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherInfoContainer">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/weatherTodayBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- "now" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="now"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="32dp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sunny_weather_symbol"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="33dp" />

                <TextView
                    android:id="@+id/weatherNow"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:text="-18Â°"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="135dp"
                    android:layout_marginStart="30dp" />

                <!-- e.g. 23:00 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="112dp" />

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:src="@drawable/cloudy_weather_symbol"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="110dp" />

                <TextView
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:text="-18Â°"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="135dp"
                    android:layout_marginStart="114dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="203dp" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="60dp"
                    android:src="@drawable/rainy_weather_symbol"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="199dp" />

                <TextView
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:text="+20Â°"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="135dp"
                    android:layout_marginStart="210dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:01"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="end"/>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="68dp"
                    android:src="@drawable/thunder_symbol"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="293dp" />

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="8Â°"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="135dp"
                    android:layout_marginStart="310dp" />


            </FrameLayout>

            <!-- Weather Week -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/weatherWeekBackground"
                android:layout_width="376dp"
                android:layout_height="234dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherTodayContainer"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
