<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blurTarget"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Static background image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sunny_morning_background" />


    <!-- ðŸ”¹ Scrollable content over background -->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <!-- ConstraintLayout inside ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blurRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- "current location" -->
            <TextView
                android:id="@+id/currentLocationTitle"
                android:layout_width="152dp"
                android:layout_height="33dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="43dp"
                android:text="current location"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- current location symbol -->
            <ImageView
                android:id="@+id/currentLocationTitleSymbol"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="119dp"
                android:layout_marginTop="47dp"
                android:scaleType="centerCrop"
                android:src="@drawable/current_location_title_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TEMPERATURE -->
            <TextView
                android:id="@+id/gradus"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginStart="138dp"
                android:layout_marginTop="132dp"
                android:text="18Â°"
                android:textColor="#FFFFFF"
                android:textSize="90sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Sunny,Cloudy,Rainy etc -->
            <TextView
                android:id="@+id/weatherStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="158dp"
                android:layout_marginTop="240dp"
                android:text="Weather Status"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Weather status symbol -->
            <ImageView
                android:id="@+id/weatherStatusTitleSymbol"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="248dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sunny_weather_status_title_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Weather Info -->
            <FrameLayout
                android:id="@+id/weatherInfoContainer"
                android:layout_width="376dp"
                android:layout_height="197dp"
                android:layout_marginTop="480dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Blur background -->
                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/weatherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Air Quality Index:  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Quality Index:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:id="@+id/weatherAirQualityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="292dp" />

            </FrameLayout>


            <eightbitlab.com.blurview.BlurView
                android:id="@+id/weatherTodayBackground"
                android:layout_width="376dp"
                android:layout_height="199dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherInfoContainer"/>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/weatherWeekBackground"
                android:layout_width="376dp"
                android:layout_height="234dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherTodayBackground"
                app:layout_constraintStart_toStartOf="parent"/>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>






























